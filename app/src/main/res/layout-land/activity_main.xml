<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:textSize="25dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="53038593 FYP Apps - \nIndoor Shopping Mall Shortest Path Suggestion" />


    <Button
        android:id="@+id/btnStartUpLoadMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:text="Choose Shopping Mall Map From Phone/SD Card" />

    <Button
        android:id="@+id/btnSearchByProductType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/btnStartUpLoadMap"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Search by product type" />

    <Button
        android:id="@+id/btnSearchByShopName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/btnSearchByProductType"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Search by shop name" />





</LinearLayout>
